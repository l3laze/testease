{
  "name": "testease",
  "version": "0.1.0",
  "description": "A simple Mocha-inspired testing tool.",
  "main": "testease.js",
  "license": "MIT",
  "type": "module",
  "devDependencies": {
    "c8": "^9.1.0"
  },
  "scripts": {
    "bench": "node ./self-exam.js bench",
    "clean": "rm -rf ./coverage",
    "test": "node ./self-exam.js",
    "coverage": "c8 -r=html -r=text --clean=false node ./self-exam.js",
    "bench-coverage": "c8 -r=html -r=text --clean=false npm run bench",
    "full-coverage": "npm run clean && npm run coverage && npm run bench-coverage"
  }
}
